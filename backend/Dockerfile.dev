# Development Dockerfile with hot reload
FROM node:20-alpine

WORKDIR /app

# Install development tools
RUN apk add --no-cache \
    python3 \
    make \
    g++ \
    curl

# Copy package files
COPY package*.json ./
COPY tsconfig.json ./

# Install all dependencies (including dev)
RUN npm install

# Create directory for source files
RUN mkdir -p src

# Expose port
EXPOSE 3000

# Development command with hot reload
CMD ["npm", "run", "dev"]