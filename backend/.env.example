# Server
PORT=3000
NODE_ENV=development

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/omnix

# JWT
JWT_SECRET=your-secret-key-here
JWT_EXPIRES_IN=7d

# SMTP Configuration for Email
# For testing, you can use Ethereal Email (free)
# Create account at: https://ethereal.email/create
SMTP_HOST=smtp.ethereal.email
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-ethereal-user@ethereal.email
SMTP_PASS=your-ethereal-password
SMTP_FROM="OmniX WhatsApp <noreply@omnix.com>"

# OTP Settings
OTP_EXPIRY_MINUTES=10
OTP_LENGTH=6

# Frontend URL
FRONTEND_URL=http://localhost:5175

# WAHA API
WAHA_BASE_URL=http://localhost:3001
WAHA_API_KEY=your-waha-api-key

# Salvy API
SALVY_API_URL=https://api.salvy.com
SALVY_API_KEY=your-salvy-api-key